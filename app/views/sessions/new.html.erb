<header>
	<h1>Sign In</h1>
</header>


<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label_tag :email  %>
        <%= email_field_tag :email, nil %>
      </li>
      <li class="required">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil %>
      </li>
      <li>
      	<%= submit_tag "Sign in" %>
      </li>
    </ol>
  </fieldset>

  <p>Dont have an account? <%= link_to("Sign Up", signup_path) %> </p>
<% end %>